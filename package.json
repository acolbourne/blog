{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier:check": "prettier --check .",
    "format": "npx eslint src --fix && npx prettier --write src",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.12.0",
    "holy-loader": "^2.3.13",
    "next": "15.2.4",
    "next-intl": "^4.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,md,mdx}": "prettier --write",
    "src/**/*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
